{# Route de la page actuelle#}
{% set route = app.request.attributes.get('_route')%}

<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Le Hameau des Pierreux{% endblock %}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <meta name="description" content="Bienvenue au Hameau des Pierreux, le lieu idéal pour toutes vos fêtes : ici, à part les hiboux et les chouettes, vous n'aurez pas de voisins !" />

        {# Inclusion des fichier CSS #}
        <link rel="stylesheet" href="{{ asset('/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
        <link rel="stylesheet" href=" {{ asset('css/styles.css') }} ">

        {# Inclusion Fichier JS #}
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}" defer></script>
        {# Google recaptcha #}
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <style>
                @font-face {
                    font-family: 'KGSecondChancesSolid';
                    src:    url({{asset('fonts/KGSecondChancesSolid.ttf')}}) format('opentype');
                }
            </style>
        {% endblock %}

    </head>
    <body>
        {% include '_partials/_main_navbar.html.twig'%}

        {# Inclusion dde l'affichage des messages flashes de type "success" et "error" #}

        {% include '_partials/_flashes.html.twig' %}

        {% block body %}

        {% endblock %}

        {% include '_partials/_main_footer.html.twig'%}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- Matomo -->
            <script>
                var _paq = window._paq = window._paq || [];
                /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
                _paq.push(['trackPageView']);
                _paq.push(['enableLinkTracking']);
                (function() {
                    var u="//localhost/matomo/matomo/";
                    _paq.push(['setTrackerUrl', u+'matomo.php']);
                    _paq.push(['setSiteId', '1']);
                    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
                    g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
                })();
            </script>
            <!-- End Matomo Code -->

        {% endblock %}

    </body>
</html>
